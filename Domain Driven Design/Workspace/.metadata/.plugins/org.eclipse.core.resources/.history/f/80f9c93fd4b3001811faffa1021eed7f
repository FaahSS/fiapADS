package br.com.fiap.main;

import br.com.fiap.bean.Conta;
import br.com.fiap.exception.Excecao;
import br.com.fiap.view.Leia;

public class TesteConta {
	public static void main(String[] args) {
		Conta c = new Conta();
		try { //Colocar linhas onde podem acontecer exceção
		c.setSaldo(Leia.decimal("Digite o Saldo"));
		// catch -> o que voce quer q exiba se ocorrer uma excecao
		// catch vem sempre acompanhado do try
		
		 //sempre teremos que criar um parametro para o catch
			
		} catch(Exception e) {
			System.out.println(Excecao.tratar(e));
			e.printStackTrace(); //Pega a exceção e mostra passo a passo onde ela passou
			//System.out.println("Erro Desconhecido!");
		} finally { //bloco opcional executar independente do que ocorra
			System.out.println("Até logo!");
		}
	}
}
